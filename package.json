{
  "name": "bitmex-candle",
  "version": "1.0.0",
  "description": "Interface for BitMEX candle",
  "main": "dist/bitmex-candle.js",
  "types": "dist/bitmex-candle.d.ts",
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && tsc",
    "clean": "rm -rf  dist",
    "test": "ava",
    "watch:test": "nodemon -e 'ts json' -x 'npm test || true'",
    "typedoc": "typedoc",
    "push-with-tags": "git push origin master && git push origin --tags",
    "push-and-publish": "npm run push-with-tags && npm publish"
  },
  "files": [
    "dist/"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run typedoc && git add doc && (git commit -m 'Update documentation' || true)"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strong-roots-capital/bitmex-candle.git"
  },
  "keywords": [
    "bitmex",
    "candle",
    "interface"
  ],
  "author": "Eric Crosson <eric.s.crosson@utexas.edu> (https://github.com/strong-roots-capital)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/strong-roots-capital/bitmex-candle/issues"
  },
  "homepage": "https://github.com/strong-roots-capital/bitmex-candle",
  "devDependencies": {
    "@types/node": "^10.12.18",
    "ava": "^1.0.0",
    "husky": "^1.3.1",
    "ts-node": "^7.0.1",
    "typedoc": "^0.13.0",
    "typedoc-plugin-markdown": "^1.1.20",
    "typescript": "^3.2.2"
  },
  "ava": {
    "compileEnhancements": false,
    "files": [
      "!dist/**/*.d.ts",
      "test/**/*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
